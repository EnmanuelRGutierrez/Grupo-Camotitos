#include <string>
#include <vector>

using namespace std;

class HTMLGenerator {
public:
        // Método para crear el título
    createTitle(title) {
        return `<title>${title}</title>\n`;
    }
    string createHeader(const string& header, int level) 
{ return ""; /* TODO */ }
    string createParagraph(const string& text) 
{ return ""; /* TODO */ }
    string createLink(const string& url, const string& text) 
{ return ""; /* TODO */ }
    // Método para una lista
    createList(items, ordered) {
        const listTag = ordered ? 'ol' : 'ul';
        let listHTML = <${listTag}>\n;
        items.forEach(item => {
            listHTML += `  <li>${item}</li>\n`;
        });
        listHTML += </${listTag}>\n;
        return listHTML;
    }


